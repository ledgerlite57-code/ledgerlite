NODE_ENV=production

# API
API_PORT=4000
API_JWT_SECRET=replace_with_long_random_secret
API_JWT_REFRESH_SECRET=replace_with_long_random_secret
API_JWT_ACCESS_TTL=900
API_JWT_REFRESH_TTL=1209600
API_CORS_ORIGIN=https://staging-app.example.com
WEB_BASE_URL=https://staging-app.example.com
SMTP_DISABLE=true
INVENTORY_COST_EFFECTIVE_DATE_ENABLED=true
INVENTORY_COST_HIGH_PRECISION_QTY_ENABLED=true
NEGATIVE_STOCK_POLICY_ENABLED=true
INVITE_LIFECYCLE_ENABLED=true
ONBOARDING_CHECKLIST_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# DB (same password as db service in docker-compose.staging.yml)
POSTGRES_PASSWORD=replace_with_db_password
DATABASE_URL=postgresql://ledgerlite:replace_with_db_password@db:5432/ledgerlite_staging

# WEB
NEXT_PUBLIC_API_BASE_URL=https://staging-api.example.com
NEXT_PUBLIC_APP_VERSION=staging-local
NEXT_PUBLIC_ENVIRONMENT_LABEL=STAGE
NEXT_PUBLIC_NON_PROD_SAFETY_BANNER_ENABLED=true
